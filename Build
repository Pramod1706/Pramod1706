---
- name: Convert user input date to required format
  hosts: localhost
  vars_prompt:
    - name: "user_date"
      prompt: "Enter the date (e.g., 2025-10-23T11:45:00)"
      private: no
  vars:
    formatted_date: "{{ user_date | to_datetime('%Y-%m-%dT%H:%M:%S') | strftime('%Y%m%dT%H%M%SZ') }}"
  tasks:
    - name: Print formatted date
      debug:
        msg: "Formatted Date: {{ formatted_date }}"
